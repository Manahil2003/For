main() {
  var i, mid, sum = 0;

  stdout.write("Enter the number:");
  var numInstr = stdin.readLineSync();
  var num = int.tryParse(numInstr!);

  mid = num! ~/ 2;

  for (var i; i <= mid; i++) {
    if ((num % i) == 0) {
      sum = sum + i;
    }
    if (sum == num) {
      print("$num is a perfect number");
    } else {
      print("$num is not a perfect");
    }
  }
}
